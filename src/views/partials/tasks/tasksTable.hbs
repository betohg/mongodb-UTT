{{#if tasks}}
<div class="ex1">
  <table class="table table-bordered table-hover table-dark">
    <thead>
      <tr>
        <th>N.</th>
        <th>Titulo</th>
        <th>Descripcion</th>
        <th>Fecha</th>
        <th>Operaciones</th>
      </tr>
    </thead>
    <tbody>
      {{#each tasks}}
      <tr>
        <td>{{@index}}</td>
        <td>{{Nombre}}</td>
        <td>{{Estado}}</td>
        <td>{{Fecha}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>

{{else}}
<div class="h-100 d-flex align-items-center justify-content-center">
  <div class="text-center text-white">
    <h1>No hay Tareas</h1>
    <img src="/iconos/tasks.png" alt="nohaytareas" class="w-65">
  </div>
</div>

{{/if}}